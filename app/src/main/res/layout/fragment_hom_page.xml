<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/HomeBackground"
    tools:context=".HomPageFragment">

    <LinearLayout
        android:id="@+id/HeadLinear"
        android:layout_width="411dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Sekil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/stock"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.ImageView.Circle"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Anbar, satış"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="580dp"
        app:layout_constraintTop_toBottomOf="@id/HeadLinear">

        <LinearLayout
            android:id="@+id/clBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_bottom"
            android:orientation="vertical"
            android:padding="10dp"
            tools:layout_editor_absoluteY="202dp">

            <TextView
                android:id="@+id/txtBasliq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Salam"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

<!--            <Button-->
<!--                android:id="@+id/btnKino"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="100dp"-->
<!--                android:backgroundTint="@color/btnBackground"-->
<!--                android:text="Kino"-->
<!--                android:textSize="30sp"-->
<!--                android:drawableLeft="@drawable/baseline_local_movies_24"-->
<!--                android:textStyle="bold" />-->

            <Button
                android:id="@+id/btnSatis"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="@color/btnBackground"
                android:text="@string/btnName"
                android:textSize="30sp"
                android:drawableLeft="@drawable/baseline_point_of_sale_24"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnQaliq"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="@color/HomeBackground"
                android:text="Qalıq"
                android:textSize="30sp"
                android:drawableLeft="@drawable/baseline_assignment_returned_24"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnAdmin"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#4660EF"
                android:text="İdarə paneli"
                android:textSize="30sp"
                android:drawableLeft="@drawable/baseline_settings_accessibility_24"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnHesabat"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#4660EF"
                android:text="Hesabat"
                android:textSize="30sp"
                android:drawableLeft="@drawable/baseline_report_24"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMedaxil"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#4660EF"
                android:text="Mədaxil"
                android:textSize="30sp"
                android:drawableLeft="@drawable/baseline_add_shopping_cart_24"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btnQeydiyyatList"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#4660EF"
                android:text="Qeydiyyat"
                android:textSize="30sp"
                android:drawableLeft="@drawable/baseline_app_registration_24"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCixis"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:backgroundTint="#4660EF"
                android:text="Çıxış"
                android:textAlignment="center"
                android:textSize="30sp"
                android:drawableLeft="@drawable/baseline_logout_24"
                android:textStyle="bold" />

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>